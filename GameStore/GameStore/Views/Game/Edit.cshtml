
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GameStore.Models.Game
<h2>Игра № @Model.Id</h2>
@using (Html.BeginForm("Edit", "Game", FormMethod.Post))
{
    <div class="editor-label">
        @Html.LabelFor(model => model.Name,"Введите название")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>

        @Html.HiddenFor(model => model.Id)
        <p>
            @Html.LabelFor(m => m.Company, "Компания")
            <br />
            @Html.EditorFor(m => m.Company)

        </p>
        <p>
            @Html.LabelFor(m => m.Price, "Цена")
            <br />
            @Html.EditorFor(m => m.Price)
        </p>
        <p><input type="submit" value="Отправить" /></p>

}

