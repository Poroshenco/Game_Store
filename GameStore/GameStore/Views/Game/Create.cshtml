@model GameStore.Models.Game

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 30px;">
    <div class="col-lg-push-4 col-lg-4">
        @using (Html.BeginForm("Create", "Game", FormMethod.Post))
        {
            <div class="content"><h3>Новая игра</h3></div>

            <div class="form-group">
                <label for="nameGame">Название игры</label>
                <input type="text" name="Name" id="nameGame" class="form-control" placeholder="Введите название" />
            </div>

            <div class="form-group">
                <label for="gameCompany">Компания</label>
                <input type="text" name="Company" id="gameCompany" class="form-control" placeholder="Введите название компании" />
            </div>

            <div class="form-group">
                <label for="gamePrice">Цена</label>
                <input type="text" name="Price" id="gamePrice" class="form-control" placeholder="Введите цену" />
            </div>

            <input type="file" name="Icon" value="Загрузить картинку" />
            

            <div style="padding-top: 10px;">
                <button type="submit" class="btn btn-block">Добавить игру</button>
            </div>
        }
    </div>
</div>
